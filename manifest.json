{
    "manifest_version": 2,
    "name": "CookieMonster",
    "version": "0.2",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "options_ui": {
        "page": "full/main.html",
        "chrome_style": true,
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs",
        "cookies",
        "*://*/*",
        "http://*/*",
        "https://*/*",
        "webRequest",
        "webRequestBlocking"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    }
}